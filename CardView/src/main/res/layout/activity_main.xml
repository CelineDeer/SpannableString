<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8e8e8"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.hxl.listviewitemclick.MainActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cardPoint1"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="15dp"
        android:layout_width="20dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#ffffff"
        android:layout_height="20dp">

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardPoint2"
        android:layout_margin="15dp"
        android:layout_width="20dp"
        app:cardCornerRadius="20dp"
        android:layout_toRightOf="@id/cardPoint1"
        app:cardBackgroundColor="#ffffff"
        android:layout_height="20dp">

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardPoint3"
        android:layout_margin="15dp"
        android:layout_width="20dp"
        app:cardCornerRadius="20dp"
        android:layout_toRightOf="@id/cardPoint2"
        app:cardBackgroundColor="#ffffff"
        android:layout_height="20dp">

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardPoint4"
        android:layout_margin="15dp"
        android:layout_width="20dp"
        app:cardCornerRadius="20dp"
        android:layout_toRightOf="@id/cardPoint3"
        app:cardBackgroundColor="#ffffff"
        android:layout_height="20dp">
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardPoint5"
        android:layout_margin="15dp"
        android:layout_width="20dp"
        app:cardCornerRadius="20dp"
        android:layout_toRightOf="@id/cardPoint4"
        app:cardBackgroundColor="#ffffff"
        android:layout_height="20dp">

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardPoint6"
        android:layout_margin="15dp"
        android:layout_width="20dp"
        app:cardCornerRadius="20dp"
        android:layout_toRightOf="@id/cardPoint5"
        app:cardBackgroundColor="#ffffff"
        android:layout_height="20dp">

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp">


    </LinearLayout>
    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="100dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#ffffff"
        app:cardElevation="5dp"
        android:layout_below="@id/cardPoint1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        </LinearLayout>
    </android.support.v7.widget.CardView>



</RelativeLayout>
